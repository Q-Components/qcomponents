<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ups_choose_delivery_package_form" model="ir.ui.view">
            <field name="name">UPS Choose Delivery Package Form</field>
            <field name="model">choose.delivery.package</field>
            <field name="inherit_id" ref="delivery.choose_delivery_package_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='delivery_packaging_id']" position="after">
                    <field name="ups_cod_parcel"  widget="boolean_toggle"/>
                    <field name="ups_cod_amount" attrs="{'invisible': [('ups_cod_parcel', '=', False)]}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
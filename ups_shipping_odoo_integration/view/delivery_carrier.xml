<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ups_shiipping_provider_details" model="ir.ui.view">
        <field name="name">delivery.carrier</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="Configuration" name="ups_configuration"
                      attrs="{'invisible': [('delivery_type', '!=', 'ups_provider')]}">
                    <group>
                        <group>
                            <field name="company_id"
                                   attrs="{'required': [('delivery_type', '=', 'ups_provider')]}"/>
                            <field name="ups_provider_package_id"
                                   attrs="{'required': [('delivery_type', '=', 'ups_provider')]}"/>
                            <field name="ups_service_type"
                                   attrs="{'required': [('delivery_type', '=', 'ups_shipping_provider')]}"/>
                            <field name="ups_weight_uom"
                                   attrs="{'required': [('delivery_type', '=', 'ups_shipping_provider')]}"/>
                            <field name="ups_label_print_methods" invisible="1"
                                   attrs="{'required': [('delivery_type', '=', 'ups_shipping_provider')]}"/>
                           <field name="ups_cod_parcel"/>
                            <field name="ups_cod_service"
                                   attrs="{'required': [('ups_cod_parcel', '!=', 'False')], 'invisible': [('ups_cod_parcel', '=', False)]}"/>
                            <field name="ups_cod_fund_code"
                                   attrs="{'required': [('ups_cod_parcel', '!=', 'False')], 'invisible': [('ups_cod_parcel', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="negotiated_rate"/>
                            <field name="saturdaydelivery"/>
                            <field name="commercial_invoice"/>
                            <field name="signature_required"/>
                            <field name="ups_pickup_functionality"/>
                            <field name="ups_request_option" attrs="{'required': [('ups_pickup_functionality', '!=', False)], 'invisible': [('ups_pickup_functionality', '=', False)]}"/>
                            <field name="ups_service_code" attrs="{'required': [('ups_pickup_functionality', '!=', False)], 'invisible': [('ups_pickup_functionality', '=', False)]}"/>
                            <field name="ups_measurement_code" attrs="{'required': [('ups_pickup_functionality', '!=', False)], 'invisible': [('ups_pickup_functionality', '=', False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
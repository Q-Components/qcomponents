<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fedex_view_stock_quant_package_details" model="ir.ui.view">
        <field name="name">Fedex Package Configuration</field>
        <field name="model">stock.quant.package</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_quant_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="insured_request"/>
                <field name="insured_amount" attrs="{'invisible': [('insured_request', '!=', True)]}"/>
                <field name="ups_cod_parcel_package"/>
                <field name="ups_cod_amount_package" attrs="{'invisible': [('ups_cod_parcel_package', '!=', True)]}"/>
                <field name="ups_cod_fund_code_package" attrs="{'invisible': [('ups_cod_parcel_package', '!=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>


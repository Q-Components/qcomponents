<odoo>
    <data>
        <record id="ups_shipping_delivery_order_view" model="ir.ui.view">
            <field name="name">stock.picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position='inside'>
                    <page string="UPS Information"
                          attrs="{'invisible': [('delivery_type', '!=', 'ups_provider')]}">
                        <group>
                            <group>
                                <field name="document_id" attrs="{'invisible': [('ups_paperless_invoice','=',False)]}"/>
                                <field name="ups_paperless_invoice"/>
                                <button type='object' class="fa fa-arrow-right oe_link"
                                        name="generate_paperless_invoice"
                                        string="Generate Paperless Invoice"
                                        attrs="{'invisible': [('carrier_tracking_ref','=',False),('ups_paperless_invoice','=',False)]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//group[@name='carrier_data']" position="inside">
                    <field name="ups_cod_amount" readonly="1"
                           attrs="{'invisible': [('delivery_type', '!=', 'ups_provider')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_company_ups_configuration" model="ir.ui.view">
        <field name="name">UPS Configuration</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="UPS Configuration">
                    <group>
                        <field name="use_ups_shipping_provider"/>
                    </group>
                    <group attrs="{'invisible': [('use_ups_shipping_provider', '!=', True)]}">
                        <field name="access_license_number"
                               attrs="{'required':[('use_ups_shipping_provider','=',True)]}"/>
                        <field name="ups_userid"
                               attrs="{'required':[('use_ups_shipping_provider','=',True)]}"/>
                        <field name="ups_password"
                               attrs="{'required':[('use_ups_shipping_provider','=',True)]}" password="True"/>
                        <field name="ups_shipper_number"
                               attrs="{'required':[('use_ups_shipping_provider','=',True)]}"/>
                        <field name="check_recipient_address"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
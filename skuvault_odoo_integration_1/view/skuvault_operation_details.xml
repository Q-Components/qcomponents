<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="view_skuvault_operation_tree_view" model="ir.ui.view">
			<field name="name">Skuvault Operation</field>
			<field name="model">skuvault.operation</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Skuvault Operation Detail" create='false'>
					<field name="name" />
					<field name="warehouse_id" />
					<field name="skuvault_operation" />
					<field name="skuvault_operation_type" />
					<field name="create_date" />
				</tree>
			</field>
		</record>

		<record id="view_form_skuvault_operation_detail" model="ir.ui.view">
			<field name="name">skuvault Operation</field>
			<field name="model">skuvault.operation</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Skuvault Operation Detail" create='false'>
					<sheet>
						<group>
							<group>
								<field name="name" readonly="1"></field>
								<field name="skuvault_operation" readonly="1" />
								<field name="skuvault_operation_type" readonly="1" />
							</group>
							<group>
								<field name="create_date" readonly="1" />
								<field name="company_id" readonly="1" />
								<field name="skuvault_message" readonly="1" />
							</group>
						</group>
						<group string="Skuvault Operation Details" colspan="4">
							<field name="operation_ids" nolabel="1" readonly="1">
								<tree decoration-danger="fault_operation==True">
									<field name="skuvault_operation_type" invisible="1" />

									<field name="skuvault_operation" invisible="1" />
									<field name="company_id" readonly="1" />
	

									<field name="fault_operation" />
									<field name ="process_message"/>
								</tree>
							</field>
						</group>

					</sheet>
				</form>
			</field>
		</record>
		<record id="view_skuvault_operation_details" model="ir.ui.view">
			<field name="name">Skuvault Operation Details</field>
			<field name="model">skuvault.operation.details</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Skuvault Operation Details" create='false'>
					<field name="skuvault_operation" />
					<field name="operation_id" />
					<field name="skuvault_operation_type" />

					<field name="request_message" />
					<field name="response_message" />
					<field name="create_date" />
				</tree>
			</field>
		</record>

		<record id="view_form_skuvault_operation_details" model="ir.ui.view">
			<field name="name">Skuvault Operation Details</field>
			<field name="model">skuvault.operation.details</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Skuvault Operation Details" create='false'>
					<sheet>
						<group readonly="1">
							<group>

								<field name="request_message" />
								<field name="response_message" />

							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_skuvault_operation" model="ir.actions.act_window">
			<field name="name">skuvault Operation</field>
			<field name="res_model">skuvault.operation</field>
			<field name="view_id" ref="view_skuvault_operation_tree_view" />
		</record>

		<record id="action_skuvault_operation_details" model="ir.actions.act_window">
			<field name="name">Skuvault Fault Data</field>
			<field name="res_model">skuvault.operation.details</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('fault_operation','=',True)]</field>
		</record>
		<menuitem id="menu_skuvault_operation_detail" name="Skuvault Process Details"
			parent="sale.menu_sale_config" sequence="4"
			action="action_skuvault_operation" />


		<menuitem id="action_skuvault_operation_details_extended" name="Fault Details"
			parent="sale.menu_sale_config" sequence="5"
			action="action_skuvault_operation_details" />
	</data>
	<data noupdate="1">
		<record id="seq_skuvault_operation_detail" model="ir.sequence">
			<field name="name">skuvault Operation</field>
			<field name="code">skuvault.operation</field>
			<field name="padding">5</field>
			<field name="prefix">Skuvault-</field>
			<field name="company_id" eval="False" />
		</record>
	</data>
</odoo>
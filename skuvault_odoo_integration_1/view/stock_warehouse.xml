<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="skuvault_stock_warehouse_configuration" model="ir.ui.view">
            <field name="name">skuvault configuration</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="use_skuvault_warehouse_management" />
                </xpath>
                <xpath expr="//notebook[last()]" position="after">
                        <notebook attrs="{'invisible': [('use_skuvault_warehouse_management', '!=', True)]}">
                            <page string="Skuvault Configuration" >
                                <group>
                                    <group>
                                        <field name="skuvault_api_url" attrs="{'required':[('use_skuvault_warehouse_management','=',True)]}" />
                                        <field name="skuvault_email_id" attrs="{'required':[('use_skuvault_warehouse_management','=',True)]}" />
                                        <field name="skuvault_password" attrs="{'required':[('use_skuvault_warehouse_management','=',True)]}" />

                                        <field name="skuvault_modify_after_date" attrs="{'required':[('use_skuvault_warehouse_management','=',True)]}" />
                                        <field name="skuvault_modify_before_date" attrs="{'required':[('use_skuvault_warehouse_management','=',True)]}" />


                                        <field name="skuvault_tenantToken" />
                                        <field name="skuvault_UserToken" />


                                     </group>
                                    <group>
                                            <button name="get_authentication_tokens" string="Get Authentication Token" type="object" />
                                            <br />
                                            <button name="import_product_from_skuvault" string="Import Product" type="object" />
                                            <br />
                                            <button name="get_item_quantities" string="Get Product Quantities" type="object" />

                                    </group>
                                </group>
                            </page>
                        </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="QuickShop" name="QuickShop">
        <t t-call="website.layout">
            <t t-set="additional_title">Quick Shop</t>

            <div id="wrap" class="oe_structure oe_empty">
                <style>
                    .website-loader {
                    position: absolute;
                    width: 100%;
                    height: 100%;
                    background: url(/wr_website_customisation/static/src/img/Spinner-1s-200px.gif) center no-repeat
                    #fff;
                    background-size: 130px;
                    z-index: 3;
                    }
                    .website-loader::after {
                    content: "Loading...";
                    position: absolute;
                    transform: translate(-50%, -50%);
                    top: 72%;
                    left: 50%;
                    font-family: calibri;
                    font-size: 16px;
                    color: #555;
                    }
                </style>
                <section class="s_text_block pb40 o_colored_level " data-snippet="s_text_block">
                    <div class="container s_allow_columns">
                        <div class="row">
                            <div class="col-lg-12 mt-4 mt-lg-0" style="min-height: 230px;">
                                <p>
                                    <div class='website-loader'/>
                                    <div class="oe_quick_shop_view"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
    <template id="product" inherit_id="website_sale.product">
        <xpath expr="//div[hasclass('row')]/div[hasclass('col-lg-6')]/div" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
        <xpath expr="//div[hasclass('row')]/div[hasclass('col-lg-6')][2]/ol/li[1]" position="replace">
            <li class="breadcrumb-item o_not_editable">
                <a href="/quick/shop">All Products</a>
            </li>
        </xpath>
    </template>

</odoo>
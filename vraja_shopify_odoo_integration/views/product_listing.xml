<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--shopify product listing tree view-->
        <record id="shopify_product_listing_tree_view" model="ir.ui.view">
            <field name="name">Shopify Product Listing Tree</field>
            <field name="model">shopify.product.listing</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Listing" create="False">
                    <field name="name"/>
                    <field name="shopify_product_id"/>
                    <field name="shopify_instance_id"/>
                </tree>
            </field>
        </record>

        <!--shopify product listing form view-->
        <record id="shopify_product_listing_form_view" model="ir.ui.view">
            <field name="name">Shopify Listing Form</field>
            <field name="model">shopify.product.listing</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Listing" create="0" edit="1">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Listing Name" nolable="1" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="shopify_instance_id" readonly="1"/>
                                <field name="product_data_queue_id" readonly="1"/>
                                <field name="shopify_product_id" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Shopify Information">
                                <group>
                                    <group>
                                        <field name="shopify_instance_id" readonly="1"/>
                                        <field name="product_tmpl_id" required="1" readonly="1"/>
                                        <field name="product_catg_id" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="website_published" readonly="1"/>
                                        <field name="exported_in_shopify" readonly="1"/>
                                        <field name="total_variants_in_shopify" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Product Variants">
                                <field name="shopify_product_listing_items" nolabel="1" readonly="1"/>
                            </page>
                            <page string="Product Images" name="shopify_product_images">
                                <group>
                                    <field name="image_ids" class="o_website_sale_image_list" context="{'default_name': name}" mode="kanban" options="{'create_text':'Add a Image'}" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action shopify product listing-->
        <record id="action_shopify_product_listing" model="ir.actions.act_window">
            <field name="name">Shopify Listing</field>
            <field name="res_model">shopify.product.listing</field>
            <field name='view_mode'>tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Shopify Product listing will display here.
                </p>
            </field>
        </record>
    </data>
</odoo>

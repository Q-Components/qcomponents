<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_partner_view_form_inherited" model="ir.ui.view">
            <field name="name">Res Partner View Form Inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="shopify_customer_id" readonly="1"/>
                    <field name="shopify_instance_id" readonly="1"/>
                    <field name="shopify_address_id" readonly="1"/>
                </xpath>
            </field>
        </record>
        <!-- Action -->
        <record id="shopify_res_partner_action" model="ir.actions.act_window">
            <field name="name">Shopify Res Partner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('shopify_instance_id', '!=', False)]</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Shopify Customer will display here.
                </p>
            </field>
        </record>
    </data>
</odoo>
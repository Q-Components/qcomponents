<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--form view-->
        <record id="shopify_location_form" model="ir.ui.view">
            <field name="name">shopify location form</field>
            <field name="model">shopify.location</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g. Location name..." readonly="1"/>
                            </h1>
                        </div>
                        <group string="Location Information">
                            <group>
                                <field name="shopify_location_id" readonly="1"/>
                                <field name="instance_id" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="is_primary_location" widget="boolean_toggle" readonly="1"/>
                                <field name="legacy" widget="boolean_toggle" readonly="1"/>
                            </group>
                        </group>
                        <group string="Warehouse Stock">
                            <group>
                                <field name="export_stock_warehouse_ids" string="Export stock warehouses"
                                       widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="warehouse_id" string="Import Stock Warehouse"/>
                            </group>
                        </group>

                        <group string="Location Detail">
                            <group>
                                <field name="is_import_export_stock" string="Import/Export Stock for this location?"
                                       widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="location_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree view-->
        <record id="shopify_location_tree" model="ir.ui.view">
            <field name="name">shopify location tree</field>
            <field name="model">shopify.location</field>
            <field name="arch" type="xml">
                <tree create="False">
                    <field name="name"/>
                    <field name="shopify_location_id"/>
                    <field name="instance_id"/>
                    <field name="company_id"/>
                    <field name="warehouse_id"/>
                </tree>
            </field>
        </record>

        <record id="action_shopify_location" model="ir.actions.act_window">
            <field name="name">Shopify Locations Data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shopify.location</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Shopify Locations will display here
                </p>
            </field>
        </record>

        <record id="action_shopify_location_from_instance" model="ir.actions.act_window">
            <field name="name">Shopify Locations Data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shopify.location</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('instance_id', '=', active_id)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Shopify Locations will display here
                </p>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="export_inventory_from_odoo_to_shopify" model="ir.cron">
            <field name="name">Export Inventory/Stock from Odoo to Shopify</field>
            <field name="model_id" ref="model_inventory_data_queue"/>
            <field name="state">code</field>
            <field name="code">model.with_context(from_cron=True).export_inventory_from_odoo_to_shopify()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record id="order_cron_process_shopify_order_queue" model="ir.cron">
            <field name="name">Shopify: Process Orders Queue</field>
            <field name="model_id" ref="model_order_data_queue"/>
            <field name="state">code</field>
            <field name="code">model.process_shopify_order_queue_using_cron()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
        </record>

        <record id="product_cron_process_shopify_product_queue" model="ir.cron">
            <field name="name">Shopify: Process Product Queue</field>
            <field name="model_id" ref="model_product_data_queue"/>
            <field name="state">code</field>
            <field name="code">model.process_shopify_product_queue_using_cron()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
        </record>


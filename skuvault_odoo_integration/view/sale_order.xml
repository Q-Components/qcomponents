<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="export_order_btn_skuvault" model="ir.ui.view">
            <field name="name">Export Order To Skuvault</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="export_order_to_skuvault" string="Export order to Skuvault" type="object" attrs="{'invisible': ['|',('skuvault_order_id', '!=', False),('state', '!=', 'sale')]}" />
                    <button name="export_order_to_skuvault" string="Update order to Skuvault" type="object" attrs="{'invisible': ['|',('skuvault_order_id', '=', False),('state', '!=', 'sale')]}" />
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page string="Skuvault">
                        <group>
                            <group>
                                <field name="skuvault_order_id" readonly="1"  />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
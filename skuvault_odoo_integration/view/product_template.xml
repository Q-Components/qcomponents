<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="skuvault_product_update_action" model="ir.actions.server">
            <field name="name">Skuvault update products</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="code">
                records.skuvault_update_products()
            </field>
        </record>
        <record id="skuvault_update_product_inventory_sk_odoo" model="ir.actions.server">
            <field name="name">Update Inventory (Skuvault -> Odoo)</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="code">
                records.update_inventory_manually_skuvault_to_odoo()
            </field>
        </record>
        <record id="skuvault_update_product_inventory_sk_odoo_from_variant" model="ir.actions.server">
            <field name="name">Update Inventory (Skuvault -> Odoo)</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="code">
                records.update_inventory_from_variant_manually_to_odoo()
            </field>
        </record>
        <record id="added_skuvault_location_product_template_form" model="ir.ui.view">
            <field name="name">added.skuvault.location.product.template.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="before">
    				<field name="sku_location"/>
    				<field name="supplier_name" />
  				</xpath>
            </field>
        </record>
    </data>
</odoo>
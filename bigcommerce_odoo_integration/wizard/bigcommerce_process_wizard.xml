<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="bigcommerce_process_wizard_view" model="ir.ui.view">
            <field name="name">BigCommerce Operation</field>
            <field name="model">bigcommerce.process.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="BigCommerce Operation">
                    <group>
                        <!--todo  domain="[('dhl_store_ids','=',True)]" -->
                        <group>
                            <field name="warehouse_id" required="1" domain="[('bigcommerce_store_ids','!=',False)]"/>
                            <field name="bigcommerce_store_id" domain="[('active','!=',False)]"/>
                        </group>
                    </group>
                    <notebook>
                        <page name='export_operation' string="odoo --> BigCommerce">
                            <group>
                                <group string="Product Category Export Operations">
                                    <field name="odoo_to_bigcommerce_export_product_categories"/>
                                    <field name="odoo_to_bigcommerce_update_product_categories"/>
                                </group>
                                <group string="Product Export Operations">
                                    <field name="odoo_to_bigcommerce_export_products"/>
                                    <field name="odoo_to_bigcommerce_update_products" invisible="1"/>
                                    <field name="odoo_to_bigcommerce_export_product_attribute"/>
                                    <field name="odoo_to_bigcommerce_export_product_variant"/>
                                </group>
                            </group>
                        </page>
                        <page name="import_operation" string="BigCommerce --> odoo">
                            <group>
                                <group string="Product Category Import Operations">
                                    <!-- <p>Import DHL To Odoo</p> -->
                                    <field name="bigcommerce_to_odoo_import_product_categories"/>
                                </group>
                                <group string="Product Import Operations">
                                    <field name="bigcommerce_to_odoo_import_products"/>
                                    <field name="bigcommerce_to_odoo_import_product_attribute"/>
                                    <field name="bigcommerce_import_product_skucode_check" />
                                </group>
                                <group string="Customer Import Operation">
                                    <field name="bigcommerce_to_odoo_import_customers"/>
                                </group>
                                <group string="Order Import Operation">
                                    <field name="bigcommerce_to_odoo_import_orders"/>
                                </group>
                                <group string="Import Inventory">
                                    <field name="bigcommerce_to_odoo_import_inventory"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Execute" name="bigcommerce_operations_execution_method" class="oe_highlight"
                                type="object"/>
                        <button class="oe_highlight" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_bigcommerce_process_wizard" model="ir.actions.act_window">
            <field name="name">BigCommerce Operation</field>
            <field name="res_model">bigcommerce.process.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bigcommerce_process_wizard_view"/>
            <field name="target">new</field>
        </record>

        <menuitem action="action_bigcommerce_process_wizard" id="menu_bigcommerce_process_wizard"
                  sequence="3" parent="bigcommerce_store_configuration" name="BigCommerce Operation"/>

    </data>
</odoo>		
            


<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_dynamic_import_records_wizard_form" model="ir.ui.view">
        <field name="name">dynamic.import.records.wizard.form</field>
        <field name="model">dynamic.import.records.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="dynamic_import_records_id" domain="[('main_table', '=', True)]"/>
                        <field name="filename" invisible="1" />
                        <field name="import_file" filename="filename" />
                        <field name="row_first_as_header"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_submit_button" string="Submit" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="import_records_action" model="ir.actions.act_window">
        <field name="name">Import Records Manually</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dynamic.import.records.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_import_records_wizard"
              name="Import Records"
              parent="menu_dynamic_import_records"
              action="import_records_action"
              sequence="10"/>
</odoo>

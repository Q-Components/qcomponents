<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="fedex_form_view_delivery_carrier" model="ir.ui.view">
		<field name="name">delivery.carrier.fedex.view</field>
		<field name="model">delivery.carrier</field>
		<field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
		<field name="arch" type="xml">
			<xpath expr="//page[@name='destination']" position='before'>
				<page string="Configuration" name="fedex_configuration"
					attrs="{'invisible': [('delivery_type', '!=', 'fedex_shipping_provider')]}">
					<group>
						<group>
							<field name="fedex_service_type"
								attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}" />
							<field name="fedex_droppoff_type"
								attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}" />
							<field name="fedex_weight_uom"
								attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}" />
							<field name="fedex_onerate"
								attrs="{'invisible': [('fedex_service_type','not in',['FIRST_OVERNIGHT','PRIORITY_OVERNIGHT','STANDARD_OVERNIGHT','FEDEX_2_DAY','FEDEX_2_DAY_AM','FEDEX_EXPRESS_SAVER'])]}"/>
							<field name="is_cod"/>
							<field name="fedex_collection_type" attrs="{'required': [('is_cod', '!=', 'False')]}"/>
						</group>
						<group>
							<field name="fedex_default_product_packaging_id"
								attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}" domain="[('package_carrier_type', '=', 'fedex_shipping_provider')]" />
							<field name="fedex_shipping_label_stock_type"
								attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}" />
							<field name="fedex_shipping_label_file_type"
								attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}" />
							<field name="fedex_third_party_account_number"/>
							<field name="add_custom_margin"/>
						</group>
					</group>
				</page>
			</xpath>
			<!-- <xpath expr="//button[@name='get_delivery_price']" position="replace">
				<button name="get_delivery_price" type="object" class="oe_inline oe_link" attrs="{'invisible':['|','|',('is_customship','=',True),('carrier_id','=',False),('state','not in',('draft','sent'))]}"><i class="fa fa-arrow-right"/> Get rate</button>
			</xpath> -->
		</field>
	</record>
</odoo>